{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "./src/*"
      ],
    }
  },
  "include": ["src"]
}
